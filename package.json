{
  "name": "zustand-immer-store",
  "description": "A ~268B library to create type-safe redux-style stores with Zustand and Immer",
  "author": "Alan Soares <alanrsoars@gmail.com> (https://github.com/alanrsoares)",
  "homepage": "https://github.com/alanrsoares/zustand-immer-store",
  "keywords": [
    "state-management",
    "zustand",
    "typescript",
    "immer",
    "redux"
  ],
  "version": "0.9.4",
  "license": "SEE LICENSE IN LICENSE.md",
  "files": [
    "dist/*"
  ],
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "module": "dist/index.es.js",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "prepare": "pnpm run build",
    "prebuild": "pnpm run test",
    "serve": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "code:types": "tsc --noEmit",
    "code:format": "prettier --write '**/*.{ts,tsx,md}'",
    "code:lint": "eslint '**/*.{ts,tsx}' --fix"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.3.3",
    "@testing-library/react-hooks": "8.0.1",
    "@types/node": "17.0.8",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "@vitejs/plugin-react": "1.3.2",
    "c8": "7.11.3",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-react": "7.30.0",
    "happy-dom": "5.3.1",
    "immer": "9.0.14",
    "nano-staged": "0.8.0",
    "prettier": "2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "simple-git-hooks": "2.8.0",
    "typescript": "4.7.4",
    "vite": "2.9.12",
    "vitest": "0.15.2",
    "zustand": "^3.7.2"
  },
  "peerDependencies": {
    "immer": "^9.0.14",
    "zustand": "^3.6.5"
  },
  "nano-staged": {
    "*.{ts,tsx,md}": "prettier --write",
    "*.{ts,tsx}": "eslint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": false
  }
}
