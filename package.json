{
  "name": "zustand-immer-store",
  "description": "A ~268B library to create type-safe redux-style stores with Zustand and Immer",
  "author": "Alan Soares <alanrsoars@gmail.com> (https://github.com/alanrsoares)",
  "keywords": [
    "state-management",
    "zustand",
    "typescript",
    "immer",
    "redux"
  ],
  "version": "0.4.1",
  "license": "SEE LICENSE IN LICENSE.md",
  "files": [
    "dist/*"
  ],
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "module": "dist/index.es.js",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "prepare": "yarn build",
    "prebuild": "yarn test",
    "postinstall": "yarn simple-git-hooks",
    "serve": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "code:types": "tsc --noEmit",
    "code:format": "prettier --write '**/*.{ts,tsx,md}'",
    "code:lint": "eslint '**/*.{ts,tsx}' --fix"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.3.0",
    "@testing-library/react-hooks": "7.0.2",
    "@types/node": "17.0.8",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "@vitejs/plugin-react": "1.1.4",
    "c8": "7.11.0",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.28.0",
    "happy-dom": "2.27.0",
    "immer": "9.0.12",
    "nano-staged": "0.5.0",
    "prettier": "2.5.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "simple-git-hooks": "2.7.0",
    "typescript": "4.5.4",
    "vite": "2.7.13",
    "vitest": "0.1.24",
    "zustand": "3.6.9"
  },
  "peerDependencies": {
    "immer": "^9.0.0",
    "zustand": "^3.6.5"
  },
  "nano-staged": {
    "*.{ts,tsx,md}": "prettier --write",
    "*.{ts,tsx}": "eslint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": false
  }
}
