{
  "name": "zustand-immer-store",
  "description": "A ~268B library to create type-safe redux-style stores with Zustand and Immer",
  "author": "Alan Soares <alanrsoars@gmail.com> (https://github.com/alanrsoares)",
  "keywords": [
    "state-management",
    "zustand",
    "typescript",
    "immer",
    "redux"
  ],
  "version": "0.1.6",
  "license": "SEE LICENSE IN LICENSE.md",
  "files": [
    "dist/*"
  ],
  "typings": "dist/zustand-immer-store.d.ts",
  "module": "dist/zustand-immer-store.es.js",
  "umd:main": "dist/zustand-immer-store.umd.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "postbuild": "./scripts/postbuild.sh",
    "postinstall": "yarn simple-git-hooks",
    "serve": "vite preview",
    "test": "vite-jest"
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react-hooks": "7.0.2",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.8",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react": "1.1.4",
    "immer": "9.0.12",
    "jest": "27.4.7",
    "nano-staged": "0.5.0",
    "prettier": "2.5.1",
    "simple-git-hooks": "2.7.0",
    "typescript": "4.5.4",
    "vite": "2.7.12",
    "vite-jest": "0.1.4",
    "zustand": "3.6.9"
  },
  "peerDependencies": {
    "immer": "^9.0.0",
    "zustand": "^3.6.5"
  },
  "jest": {
    "preset": "vite-jest",
    "testEnvironment": "jsdom"
  },
  "nano-staged": {
    "*.{ts,tsx,md}": "prettier --write"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  }
}
